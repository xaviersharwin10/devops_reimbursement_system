
pipeline {
    agent any
    stages {
        stage('Frontend npm install') { 
            steps {
                sh script: """
        cd frontend  # Navigate to the frontend directory
        npm install  # Install frontend dependencies
        npm start &
      """
            }
        }
        stage('Backend npm install') { 
            steps {
                sh script: """
        cd backend  # Navigate to the frontend directory
        npm install  # Install frontend dependencies
        npm run server
      """
            }
        }
        // stage('Test') {
